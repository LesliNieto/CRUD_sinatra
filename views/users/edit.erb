<h1>Edit user</h1>
<form id="edit_form" action="/users/<%=@user[:id]%>/update" method="post">
  <input type="hidden" name="_method" value="put">
  <label>Name: </label>
  <input required type="text" name="name" value="<%= @user[:name]%>" id="name">
  <br><br><label>Last name: </label>
  <input required type="text" name="last_name" value="<%= @user[:last_name]%> " id="last_name">
  <br><br><label>Email: </label>
  <input required type="email" name="email" value="<%= @user[:email]%>" id="email">
  <br><br><label>Age: </label>
  <input type="number" name="age" value="<%= @user[:age]%>"  id="age">
  <br><br><label>Address: </label>
  <input type="text" name="address" value="<%= @user[:address]%>"  id="address">
  <br><br> <input class="button" type="submit" name="update" value="Update">
  <button><a href="/users/<%=@user[:id]%>">Back</a></button>
</form>

